<!DOCTYPE html>
<html lang="id" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Lab Visor{% endblock %}</title>

    <link rel="stylesheet" href="/static/css/style.css">
    <link rel="stylesheet" href="/static/css/bootstrap.min.css">
    <link rel="stylesheet" href="/static/css/bootstrap-icons.css">

    <script src="/static/js/htmx.min.js"></script>
    <script src="/static/js/htmx-ext-sse.min.js"></script>
    <script src="/static/js/bootstrap.bundle.min.js"></script>
    <script src="/static/js/chart.min.js"></script>
    <script src="/static/js/sweetalert2.min.js"></script>
    <script src="/static/js/luxon.min.js"></script>
    <script>
        const tz = Intl.DateTimeFormat().resolvedOptions().timeZone;
        const { DateTime, Settings } = luxon;
        Settings.defaultZoneName = tz;
    </script>
</head>
<body>
    <div class="container-main">
        {# toast #}
        <div id="toast-container" style="position: fixed; top: 20px; right: 20px; z-index: 9999;">
            <div id="_alert" class="container" hidden></div>
            <div id="success-toast" class="toast align-items-center text-bg-success border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body"></div>
                    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
            <div id="error-toast" class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
                <div class="d-flex">
                    <div class="toast-body"></div>
                    <button type="button" class="btn-close me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
                </div>
            </div>
        </div>

        {# navbar #}
        <nav class="navbar navbar-expand-lg bg-body-tertiary w-100">
            <div class="container">
                <a class="navbar-brand" href="/">Dashboard</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/sys"><i class="bi bi-activity"></i> System Info</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" aria-current="page" href="/container"><i class="bi bi-box-seam"></i> Container</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="https://github.com/fathulkirom22/lab-visor" target="_blank"><i class="bi bi-info-circle"></i> About</a>
                        </li>
                    </ul>
                    <div class="d-flex justify-content-between">
                        <button id="btnSwitchTheme" class="btn"><i id="iconSwitchTheme" class="bi bi-moon"></i></button>
                        <div class="nav-item dropdown">
                            <button class="btn" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-gear"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end color-secondary">
                                <li><a class="dropdown-item" href="/?page_edit=1">Edit Dashboard</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </nav>

        {# main #}
        <main class="mt-3 h-100 w-100">
            {% block content %}{% endblock %}
        </main>

        {# footer #}
        <footer class="mt-5 w-100">
            <div class="container">
                <div class="border-top d-flex justify-content-between pt-4">
                    <div>
                        <p><b>Lab Visor</b> | Home Lab Landingpage & Resource Monitoring</p>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script type="module" src="/static/js/main.js"></script>
</body>
</html>
