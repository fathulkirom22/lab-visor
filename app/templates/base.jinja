<!DOCTYPE html>
<html lang="id" data-bs-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Lab Visor{% endblock %}</title>

    <link rel="stylesheet" href="/static/css/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" rel="stylesheet">

    <script src="https://unpkg.com/htmx.org@2.0.4"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/luxon/3.3.0/luxon.min.js"></script>
    <script>
        const tz = Intl.DateTimeFormat().resolvedOptions().timeZone;
        const { DateTime, Settings } = luxon;
        Settings.defaultZoneName = tz;
    </script>
</head>
<body class="min-vh-100">
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container">
            <div class="d-flex justify-content-between w-100 align-items-center">
                <div class="d-flex">
                    <a class="navbar-brand" href="/">Dashboard</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" href="/sys">System Info</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link disabled" aria-disabled="true">About</a>
                            </li>
                        </ul>
                    </div>
                </div>
                <div>
                    <button id="btnSwitchTheme" class="btn"><i id="iconSwitchTheme" class="bi bi-moon"></i></button>
                </div>
            </div>
        </div>
    </nav>

    <main class="mt-3">
        <div id="_alert" class="container"></div>
        {% block content %}{% endblock %}
    </main>

    <footer class="mt-5">
        <div class="container">
            <div class="border-top d-flex justify-content-between pt-4">
                <div>
                    <p>Server Resource Monitoring</p>
                </div>
                <div>
                    <p>Lab Visor</p>
                </div>
            </div>
        </div>
    </footer>

    <script type="module">
        const iconSwitchTheme = document.getElementById('iconSwitchTheme');
        document.getElementById('btnSwitchTheme').addEventListener('click',()=>{
            if (document.documentElement.getAttribute('data-bs-theme') == 'dark') {
                document.documentElement.setAttribute('data-bs-theme','light')
                iconSwitchTheme.classList.remove('bi-sun');
                iconSwitchTheme.classList.add('bi-moon');
            }
            else {
                document.documentElement.setAttribute('data-bs-theme','dark')
                iconSwitchTheme.classList.remove('bi-moon');
                iconSwitchTheme.classList.add('bi-sun');
            }
        });
        document.body.addEventListener('htmx:error', function(event) {
            Swal.fire({
                icon: 'error',
                title: 'Oops...',
                text: 'Something went wrong!',
            });
        });
    </script>
</body>
</html>
